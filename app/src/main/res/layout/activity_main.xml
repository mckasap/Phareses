<?xml version="1.0" encoding="utf-8"?>

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"


        android:stretchColumns="*"
    >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/please"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:text="Please"
                android:onClick="myClicked"/>

            <Button
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_column="1"
                android:layout_height="match_parent"
                android:text="Welcome"
                android:onClick="myClicked"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/mynameis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="My name is..."
                android:onClick="myClicked"/>

            <Button
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_height="match_parent"
                android:text="Hello"
                android:onClick="myClicked"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/doyouspeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Do you speak English"
                android:onClick="myClicked"
                />

            <Button
                android:id="@+id/goodevening"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_height="match_parent"
                android:text="Good Evening"
                android:onClick="myClicked"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/howareyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="howareyou"
               android:onClick="myClicked"/>

            <Button
                android:id="@+id/ilivein"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_height="match_parent"
                android:text="I live in..."
               android:onClick="myClicked"
                />
        </TableRow>
    </TableLayout>
